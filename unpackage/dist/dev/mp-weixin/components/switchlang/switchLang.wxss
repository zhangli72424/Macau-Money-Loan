view, text, input {
  box-sizing: border-box;
  line-height: 1;
}
.over-txt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hover-transform1 {
  opacity: .95;
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.hover-transform2 {
  background-color: #f6f6f6;
}
.nodata {
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #b9b9b9;
  font-size: 13px;
}
.pagetitle {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20px;
  color: #E9E9F4;
  font-weight: bold;
}
.app-lang {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  z-index: 1000;
}
.app-lang .content {
  width: 600rpx;
  background-color: #212121;
  border-radius: 16rpx;
}
.app-lang .title {
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14px;
  color: #E9E9F4;
}
.app-lang .langs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 56rpx 46rpx 50rpx;
  border-top: 1rpx solid #525050;
}
.app-lang .langs .lang {
  width: 156rpx;
  height: 66rpx;
  background: #E9E9F4;
  border-radius: 10rpx;
  text-align: center;
  line-height: 66rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-size: 14px;
}
.app-lang .langs .lang.active {
  background: -webkit-linear-gradient(top, #d4ae6d, #fedf9d) !important;
  background: linear-gradient(to bottom, #d4ae6d, #fedf9d) !important;
  color: #E9E9F4;
}
.app-lang .langs .lang + .lang {
  margin-left: 20rpx;
}

